        <Upgrade Id="$(var.UpgradeCode)">
            <UpgradeVersion IncludeMinimum="yes" Minimum="1.0.0" Maximum="$(var.ProductVersion)" MigrateFeatures="yes" Property="OLDERVERSIONDETECTED" />
